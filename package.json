{
  "name": "banka_app",
  "version": "1.0.0",
  "description": "a lightweight banking app",
  "main": "app.js",
  "scripts": {
    "start": "node ./build/app.js",
    "test": "npm run db:rollback && npm run testing",
    "start:dev": "nodemon --exec babel-node app/app.js",
    "db:migrate": "babel-node app/server/migrations/migrate.js",
    "db:unmigrate": "babel-node app/server/migrations/unmigrate.js",
    "db:seedAll": "babel-node app/server/seed/seedAll.js",
    "testing": "nyc mocha --timeout 50000  -r esm --exit",
    "db:rollback": "npm run db:unmigrate && npm run db:migrate && npm run db:seedAll",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && npm run build-babel",
    "build-babel": "babel -d ./build ./app -s",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "coverage": "npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage"
  },
  "author": "adeyemi adekorede",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-things": "^0.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "babel-plugin-inline-json-import": "^0.3.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai-arrays": "^2.0.0",
    "codeclimate-test-reporter": "^0.5.1",
    "cors": "^2.8.5",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "esm": "^3.2.6",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^9.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "multer": "^1.4.1",
    "nyc": "^14.1.1",
    "pg": "^7.10.0",
    "swagger-ui-express": "^4.0.2"
  }
}
